<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header card-header-primary">
          <h4 class="card-title ">Blog Tags</h4>
          <p class="card-category"> Here is a subtitle for this table</p>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table">
              <thead class=" text-primary">
                <tr>
                  <th>Name</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% @blog_tags.each do |blog_tag| %>
                <tr>
                  <td><%= blog_tag.name %></td>
                <td>
                    <%= link_to 'Edit', edit_admins_blog_tag_path(blog_tag), class: 'btn btn-primary btn-sm' %>
                    <%= link_to 'DELETE', [:admins, blog_tag], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>